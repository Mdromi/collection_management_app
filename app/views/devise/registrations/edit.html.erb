<div id="editProfile-modal" data-controller="modal" data-modal-target="modal" data-action="click->modal#close"  data-resource-id="<%= resource.id %>" tabindex="-1" aria-hidden="true" class="fixed top-0 right-0 left-0 z-10 flex justify-center items-center h-screen bg-gray-900 bg-opacity-50">
  <div class="relative p-4 w-full max-w-2xl" data-modal-target="modalContent">
    <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
      <div class="flex items-center justify-between p-4 md:p-5 border-b rounded-t dark:border-gray-600">
        <h3 class="text-xl font-semibold text-gray-900 dark:text-white">Edit Profile</h3>
        <button type="button" data-action="click->modal#close" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white">
          <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
          </svg>
          <span class="sr-only">Close modal</span>
        </button>
      </div>
      <div class="p-4 md:p-5 space-y-4">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { multipart: true, method: :put }) do |f| %>
          <div class="mb-4">
            <%= f.label :username, class: "block text-gray-700 dark:text-gray-300 text-sm font-medium mb-2" %>
            <%= f.text_field :username, autofocus: true, disabled: true, class: "appearance-none block w-full px-3 py-2 border rounded-md placeholder-gray-400 text-gray-900 dark:bg-gray-800 dark:border-gray-700 dark:focus:border-gray-500 dark:focus:outline-none focus:border-blue-500 focus:outline-none transition duration-150 ease-in-out" %>
          </div>
          <div class="mb-4">
            <%= f.label :email, class: "block text-gray-700 dark:text-gray-300 text-sm font-medium mb-2" %>
            <%= f.email_field :email, disabled: true, class: "appearance-none block w-full px-3 py-2 border rounded-md placeholder-gray-400 text-gray-900 dark:bg-gray-800 dark:border-gray-700 dark:focus:border-gray-500 dark:focus:outline-none focus:border-blue-500 focus:outline-none transition duration-150 ease-in-out" %>
          </div>
          <div class="mb-4">
            <%= f.label :profile_image, class: "block text-gray-700 dark:text-gray-300 text-sm font-medium mb-2" %>
            <%= f.file_field :profile_image, class: "appearance-none block w-full px-3 py-2 border rounded-md placeholder-gray-400 text-gray-900 dark:bg-gray-800 dark:border-gray-700 dark:focus:border-gray-500 dark:focus:outline-none focus:border-blue-500 focus:outline-none transition duration-150 ease-in-out" %>
          </div>
          <div class="mt-6">
            <%= f.submit "Update Profile", class: "group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-500 focus:outline-none focus:border-blue-700 focus:shadow-outline-blue active:bg-blue-700 transition duration-150 ease-in-out" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
