<!-- Inside your modal HTML -->
<div id="signUp-modal" data-controller="modal" data-modal-target="modal" data-action="click->modal#close" tabindex="-1" aria-hidden="true" class="fixed top-0 right-0 left-0 z-10 flex justify-center items-center h-screen bg-gray-900 bg-opacity-50">
  <!-- Modal content -->
  <div class="relative p-4 w-full max-w-2xl" data-modal-target="modalContent">
    <!-- Modal body -->
    <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
      <!-- Modal header -->
      <div class="flex items-center justify-between p-4 md:p-5 border-b rounded-t dark:border-gray-600">
        <h3 class="text-xl font-semibold text-gray-900 dark:text-white">
          Sign Up
        </h3>
        <button type="button" data-action="click->modal#close" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white">
          <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
          </svg>
          <span class="sr-only">Close modal</span>
        </button>
      </div>
      <!-- Modal body -->
      <div class="p-4 md:p-5 space-y-4">
        <!-- Your form goes here -->
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="mb-4">
            <%= f.label :username, class: "block text-gray-700 dark:text-gray-300 text-sm font-medium mb-2" %>
            <%= f.text_field :username, autofocus: true, class: "appearance-none block w-full px-3 py-2 border rounded-md placeholder-gray-400 text-gray-900 dark:bg-gray-800 dark:border-gray-700 dark:focus:border-gray-500 dark:focus:outline-none focus:border-blue-500 focus:outline-none transition duration-150 ease-in-out", data: { target: 'auth-form.username' } %>
            <% if resource.errors[:username].any? %>
              <p class="text-red-500 text-sm mt-1"><%= resource.errors[:username].first %></p>
            <% end %>
          </div>
          <div class="mb-4">
            <%= f.label :email, class: "block text-gray-700 dark:text-gray-300 text-sm font-medium mb-2" %>
            <%= f.email_field :email, class: "appearance-none block w-full px-3 py-2 border rounded-md placeholder-gray-400 text-gray-900 dark:bg-gray-800 dark:border-gray-700 dark:focus:border-gray-500 dark:focus:outline-none focus:border-blue-500 focus:outline-none transition duration-150 ease-in-out", data: { target: 'auth-form.email' } %>
            <% if resource.errors[:email].any? %>
              <p class="text-red-500 text-sm mt-1"><%= resource.errors[:email].first %></p>
            <% end %>
          </div>
          <div class="mb-6">
            <%= f.label :password, class: "block text-gray-700 dark:text-gray-300 text-sm font-medium mb-2" %>
            <%= f.password_field :password, autocomplete: "new-password", class: "appearance-none block w-full px-3 py-2 border rounded-md placeholder-gray-400 text-gray-900 dark:bg-gray-800 dark:border-gray-700 dark:focus:border-gray-500 dark:focus:outline-none focus:border-blue-500 focus:outline-none transition duration-150 ease-in-out", data: { target: 'auth-form.password' } %>
            <% if resource.errors[:password].any? %>
              <p class="text-red-500 text-sm mt-1"><%= resource.errors[:password].first %></p>
            <% end %>
          </div>
          <div class="mb-6">
            <%= f.label :password_confirmation, class: "block text-gray-700 dark:text-gray-300 text-sm font-medium mb-2" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "appearance-none block w-full px-3 py-2 border rounded-md placeholder-gray-400 text-gray-900 dark:bg-gray-800 dark:border-gray-700 dark:focus:border-gray-500 dark:focus:outline-none focus:border-blue-500 focus:outline-none transition duration-150 ease-in-out", data: { target: 'auth-form.password_confirmation' } %>
            <% if resource.errors[:password_confirmation].any? %>
              <p class="text-red-500 text-sm mt-1"><%= resource.errors[:password_confirmation].first %></p>
            <% end %>
          </div>
          <div class="mt-6">
            <%= f.submit "Sign up", class: "group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-500 focus:outline-none focus:border-blue-700 focus:shadow-outline-blue active:bg-blue-700 transition duration-150 ease-in-out" %>
          </div>
        <% end %>
        <%= button_to user_google_oauth2_omniauth_authorize_path, method: :post, form_class: "inline-flex justify-center w-full bg-blue-500 hover:bg-blue-600 focus:ring-4 focus:ring-blue-300 text-white font-medium px-4 py-2 rounded-lg transition-colors duration-300", :data => {turbo: "false"} do %>
          <div class="flex items-center">
            <svg class="w-4 h-4 me-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 18 19">
              <path fill-rule="evenodd" d="M8.842 18.083a8.8 8.8 0 0 1-8.65-8.948 8.841 8.841 0 0 1 8.8-8.652h.153a8.464 8.464 0 0 1 5.7 2.257l-2.193 2.038A5.27 5.27 0 0 0 9.09 3.4a5.882 5.882 0 0 0-.2 11.76h.124a5.091 5.091 0 0 0 5.248-4.057L14.3 11H9V8h8.34c.066.543.095 1.09.088 1.636-.086 5.053-3.463 8.449-8.4 8.449l-.186-.002Z" clip-rule="evenodd"/>
            </svg>
            <span>Login with Google</span>
          </div>
        <% end %>
        <!-- Link for already registered users -->
        <div class="text-sm text-gray-500 dark:text-gray-400">
          Already have an account? <%= link_to "Sign In", new_user_session_path, class: "underline" %>
        </div>
      </div>
    </div>
  </div>
</div>
