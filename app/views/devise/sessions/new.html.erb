<!-- Inside your modal HTML -->
<div id="signIn-modal" data-controller="modal" data-modal-target="modal" data-action="click->modal#close" tabindex="-1" aria-hidden="true" class="fixed top-0 right-0 left-0 z-10 flex justify-center items-center h-screen bg-gray-900 bg-opacity-50">
  <!-- Modal content -->
  <div class="relative p-4 w-full max-w-2xl" data-modal-target="modalContent">
    <!-- Modal body -->
    <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
      <!-- Modal header -->
      <div class="flex items-center justify-between p-4 md:p-5 border-b rounded-t dark:border-gray-600">
        <h3 class="text-xl font-semibold text-gray-900 dark:text-white">
          Sign In
        </h3>
        <button type="button" data-action="click->modal#close" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white">
          <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
          </svg>
          <span class="sr-only">Close modal</span>
        </button>
      </div>
      <!-- Modal body -->
      <div class="p-4 md:p-5 space-y-4">
        <!-- Your form goes here -->
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="mb-4">
            <%= f.label :email, class: "block text-gray-700 dark:text-gray-300 text-sm font-medium mb-2" %>
            <%= f.email_field :email, autofocus: true, class: "appearance-none block w-full px-3 py-2 border rounded-md placeholder-gray-400 text-gray-900 dark:bg-gray-800 dark:border-gray-700 dark:focus:border-gray-500 dark:focus:outline-none focus:border-blue-500 focus:outline-none transition duration-150 ease-in-out", data: { target: 'auth-form.email' }%>
            <% if resource.errors[:email].any? %>
              <p class="text-red-500 text-sm mt-1"><%= resource.errors[:email].first %></p>
            <% end %>
          </div>
          <div class="mb-6">
            <%= f.label :password, class: "block text-gray-700 dark:text-gray-300 text-sm font-medium mb-2" %>
            <%= f.password_field :password, autocomplete: "current-password", class: "appearance-none block w-full px-3 py-2 border rounded-md placeholder-gray-400 text-gray-900 dark:bg-gray-800 dark:border-gray-700 dark:focus:border-gray-500 dark:focus:outline-none focus:border-blue-500 focus:outline-none transition duration-150 ease-in-out" , data: { target: 'auth-form.password' } %>
            <% if resource.errors[:password].any? %>
              <p class="text-red-500 text-sm mt-1"><%= resource.errors[:password].first %></p>
            <% end %>
          </div>
          <div class="flex items-center justify-between">
            <div class="flex items-center">
              <%= f.check_box :remember_me, class: "form-checkbox h-4 w-4 text-blue-600 transition duration-150 ease-in-out"%>
              <label for="remember_me" class="ml-2 block text-sm leading-5 text-gray-900 dark:text-gray-300">Remember me</label>
            </div>
            <div class="text-sm leading-5">
              <%= link_to "Forgot your password?", new_password_path(resource_name), class: "font-medium text-blue-600 hover:text-blue-500 focus:underline transition ease-in-out duration-150 opacity-50 pointer-events-none" %>
            </div>
          </div>
          <div class="mt-6">
            <%= f.submit "Sign in", 
             class: "group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-500 focus:outline-none focus:border-blue-700 focus:shadow-outline-blue active:bg-blue-700 transition duration-150 ease-in-out" %>
          </div>
        <% end %>
        <!-- Link for users who don't have an account -->
        <div class="text-sm text-gray-500 dark:text-gray-400">
          Don't have an account yet? <%= link_to "Sign Up", new_user_registration_path, class: "underline" %>
        </div>
      </div>
    </div>
  </div>
</div>
