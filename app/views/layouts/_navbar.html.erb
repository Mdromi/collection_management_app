<nav class="bg-white border-gray-200 dark:bg-gray-900 border-b border-gray-300 dark:border-gray-700">
  <div class="flex flex-wrap items-center justify-between mx-auto p-4">
    <!-- Logo and Menu Items -->
    <a href="/" class="flex items-center">
      <img src="https://flowbite.com/docs/images/logo.svg" class="h-8 mr-3" alt="Flowbite Logo">
      <span class="self-center text-2xl font-semibold whitespace-nowrap dark:text-white">The Collection</span>
    </a>
    <button data-collapse-toggle="navbar-default" type="button" class="inline-flex items-center p-2 ml-3 text-sm text-gray-500 rounded-lg md:hidden hover:bg-gray-100 dark:text-gray-400 dark:hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:focus:ring-gray-600" aria-controls="navbar-default" aria-expanded="false">
      <span class="sr-only">Open main menu</span>
      <svg class="w-6 h-6" aria-hidden="true" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
        <path fill-rule="evenodd" d="M3 5a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 10a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 15a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd"></path>
      </svg>
    </button>
    <div class="hidden w-full p-4 mt-4 md:p-0 md:mt-0 border border-gray-100  rounded-lg md:flex md:items-center md:w-auto md:border-0  md:bg-white dark:bg-gray-800 md:dark:bg-gray-900 dark:border-gray-700" id="navbar-default">
      <ul class="flex flex-col md:flex-row md:space-x-8 md:mt-0 md:text-sm md:font-medium md:border-0">
        <li>
          <%= link_to "Home", root_path, class: "block py-2 pl-3 pr-4 rounded md:p-0 #{current_page?(root_path) ? 'text-white bg-blue-700 md:bg-transparent md:text-blue-700 dark:text-blue-500' : 'text-gray-900 hover:bg-gray-100 md:hover:bg-transparent md:hover:text-blue-700 dark:text-white dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent'}", aria: { current: current_page?(root_path) ? 'page' : nil } %>
        </li>
        <li>
          <%= link_to "Collection", collections_path, class: "block py-2 pl-3 pr-4 rounded md:p-0 #{current_page?(collections_path) ? 'text-white bg-blue-700 md:bg-transparent md:text-blue-700 dark:text-blue-500' : 'text-gray-900 hover:bg-gray-100 md:hover:bg-transparent md:hover:text-blue-700 dark:text-white dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent'}" %>
        </li>
        <% if current_user&.admin? %>
          <li>
            <%= link_to "Dashboard", dashboard_path, class: "block py-2 pl-3 pr-4 rounded md:p-0 #{current_page?(dashboard_path) ? 'text-white bg-blue-700 md:bg-transparent md:text-blue-700 dark:text-blue-500' : 'text-gray-900 hover:bg-gray-100 md:hover:bg-transparent md:hover:text-blue-700 dark:text-white dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent'}" %>
          </li>
        <% end %>
      </ul>
      <div class="relative py-4 md:ml-4 md:py-0">
        <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
          <svg class="w-4 h-4 text-gray-500 dark:text-gray-400" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z"/>
          </svg>
          <span class="sr-only">Search icon</span>
        </div>
        <input type="text" id="search-navbar" class="block w-full p-2 pl-10 text-sm text-gray-900 border border-gray-300 rounded-lg bg-gray-50 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="Search...">
      </div>
      <div class="flex items-center gap-4 ml-4 " data-controller="dark-mode">
        <!-- Dark Mode Toggle -->
        <button data-action="click->dark-mode#toggle" id="dark-mode-toggle" type="button" class="text-gray-500 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 focus:outline-none focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 rounded-lg text-sm p-2.5">
          <svg data-dark-mode-target="icon" data-icon="sun" class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
            <path d="M12 3v2m6.36 1.64l-1.42 1.42m4.24 4.24h-2m-1.64 6.36l-1.42-1.42m-4.24 4.24v-2m-6.36-1.64l1.42-1.42m-4.24-4.24h2m1.64-6.36l1.42 1.42" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
          <svg data-dark-mode-target="icon" data-icon="moon" class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" style="display:none">
            <path d="M21 12.79A9 9 0 0112.21 3 7 7 0 0021 12.79z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>
        <!-- Language Toggle -->
        <button id="language-toggle" data-controller="language-toggle" data-action="click->language-toggle#toggle" type="button" class="text-gray-500 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 focus:outline-none focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 rounded-lg text-sm p-2.5">
          <img data-locale="de" src="<%= asset_path('germany.png') %>" alt="German icon" class="w-5 h-5"  data-language-toggle-target="icon"/>
          <img data-locale="en" src="<%= asset_path('united-kingdom.png') %>" alt="English icon" class="w-5 h-5"  data-language-toggle-target="icon" />
        </button>
        <% if user_signed_in? %>
          <!-- User is logged in, show logout button -->
          <%= link_to "Profile", user_profile_path(current_user), class: "block py-2 pl-3 pr-4 rounded md:p-0 #{current_page?(user_profile_path(current_user)) ? 'text-white bg-blue-700 md:bg-transparent md:text-blue-700 dark:text-blue-500' : 'text-gray-900 hover:bg-gray-100 md:hover:bg-transparent md:hover:text-blue-700 dark:text-white dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent'}" %>
          <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "text-gray-500 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 focus:outline-none focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 rounded-lg text-sm p-2.5" %>
        <% else %>
          <!-- User is not logged in, show Sign In and Sign Up links -->
          <%= link_to "Sign In", new_user_session_path, class: "text-gray-500 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 focus:outline-none focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 rounded-lg text-sm p-2.5" %>
          <%= link_to "Sign Up", new_user_registration_path, class: "text-gray-500 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 focus:outline-none focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 rounded-lg text-sm p-2.5" %>
        <% end %>
      </div>
    </div>
  </div>
</nav>
