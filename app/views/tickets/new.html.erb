<!-- app/views/tickets/new.html.erb -->
<div class="bg-gray-100 dark:bg-gray-900 text-gray-900 dark:text-gray-100 min-h-screen">
  <div class="container mx-auto p-4">
    <%= form_with model: @ticket, url: tickets_path, class: "w-full max-w-lg mx-auto bg-white dark:bg-gray-800 p-6 rounded-lg shadow-md" do |f| %>
      <h1 class="text-2xl text-center font-extrabold text-gray-900 dark:text-gray-100 mb-6">Create Support Ticket</h1>
      <div class="mb-4">
        <%= f.label :summary, class: "block text-gray-700 dark:text-gray-300 text-sm font-bold mb-2" %>
        <%= f.text_field :summary, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 dark:text-gray-300 leading-tight focus:outline-none focus:shadow-outline dark:bg-gray-700 dark:border-gray-600" %>
      </div>
      <div class="mb-4">
        <%= f.label :priority, class: "block text-gray-700 dark:text-gray-300 text-sm font-bold mb-2" %>
        <%= f.select :priority, options_for_select([['High', 'High'], ['Medium', 'Medium'], ['Low', 'Low']]), {}, class: "block appearance-none w-full bg-white dark:bg-gray-700 border border-gray-300 dark:border-gray-600 hover:border-gray-500 px-4 py-2 pr-8 rounded leading-tight focus:outline-none focus:shadow-outline" %>
      </div>
      <%= f.hidden_field :collection_id, value: @collection.id if @collection %>
      <div class="mt-6">
        <%= f.submit 'Create Ticket', class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
      </div>
    <% end %>
  </div>
</div>
